<p id="notice"><%= notice %></p>

<p>
  <strong>Pedido:</strong>
  <%= @order.id %>
</p>

<p>
  <strong>Valor:</strong>
  <%= number_to_currency(order.valor) %>
</p>

<p>
  <strong>Descricao:</strong>
  <%= @order.descricao %>
</p>



<p>
  <strong>Telefone cliente:</strong>
  <%= @order.telefone_cliente %>
</p>

<p>
  <strong>Nome cliente:</strong>
  <%= @order.nome_cliente %>
</p>

<p>
  <strong>Prazo conclusao:</strong>
  <%= l(order.prazo_conclusao, formats: :casual, locale: :'pt-BR', default: '-') %
</p>

<p>
  <strong>Entrada:</strong>
  <%= l(order.prazo_entrada, formats: :casual, locale: :'pt-BR', default: '-') %>
</p>

<p>
  <strong>Modelo bike:</strong>
  <%= @order.modelo_bike %>
</p>

<p>
  <strong>Assessoria:</strong>
  <%= @order.assessoria %>
</p>

<p>
  <strong>Situacao:</strong>
  <%= @order.situacao %>
</p>

