<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="wrapper fadeInDown">
      <div id="formContent">

        <div class="fadeIn first">
          <%= image_tag("/images/login.png", class: "", id:"icon") %>
        </div>

        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control',placeholder:"login" ,id:"login",class:"fadeIn second"%>

        
        <%= f.password_field :password, id:"password" , class:"fadeIn third",autocomplete: "new-password" , placeholder:"password" %>

        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"fadeIn third" , placeholder:"password-confirmation" %>


        <div id="formFooter " class="flex">
          <%= f.submit "Criar nova conta", class:"btn btn-primary btn-lg btn-block w-50 p-0 pt-4 pb-4"  %>
        <%= render "devise/shared/links" %>
        </div>
      </div>

    </div>
   
<% end %>


