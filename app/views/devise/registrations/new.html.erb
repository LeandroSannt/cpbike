

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<!------ Include the above in your HEAD tag ---------->

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles --> 

    <!-- Icon -->
    <div class="fadeIn first">
      <%= image_tag("/images/login.png", class: "", id:"icon") %>
    </div>

    <!-- Login Form -->

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%#= f.text_field :email,id:"login",class:"fadeIn second", name:"login",autofocus: true, autocomplete: "email" ,placeholder:"login"%>
               <div class="form-group col-sm-12">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>
          <%#= f.text_field :password,id:"password", class:"fadeIn third", autocomplete: "current-password", placeholder:"password" ,name:"password"%>

      <%#= f.submit "Log in" , class:"fadeIn fourth"%>

      <div class="d-flex justify-content-around mt-4">
    <%= f.submit "Sign up", class:"btn btn-primary btn-lg btn-block w-50"  %>

    <%= render "devise/shared/links" %

   <%end%>
    <!-- Remind Passowrd -->
    <div id="formFooter">
      <%= render "devise/shared/links" %>

    </div>

  </div>
</div>


<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

